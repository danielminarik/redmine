<%= form_for(issue) do |f| %>
  <% if issue.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(issue.errors.count, "error") %> prohibited this issue from being saved:</h2>

      <ul>
      <% issue.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :tracker_id %>
    <%= f.collection_select :tracker_id, Tracker.all, :id, :name %>
  </div>

  <div class="field">
    <%= f.label :status_id %>
    <%= f.collection_select :status_id, Status.all, :id, :name %>
  </div>

  <div class="field">
    <%= f.label :priority_id %>
    <%= f.collection_select :priority_id, Priority.all, :id, :name %>
  </div>

  <div class="field">
    <%= f.label :assignee_id %>
    <% if @issue.new_record? %>
      <%= f.collection_select :assignee_id, User.all.order("last_name ASC"), :id, :fullname, :selected => current_user.id %>
    <% else %>
      <%= f.collection_select :assignee_id, User.all.order("last_name ASC"), :id, :fullname %>
    <% end %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
